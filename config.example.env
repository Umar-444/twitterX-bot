# Twitter API Credentials (REQUIRED)
# Get these from https://developer.twitter.com/
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
ACCESS_TOKEN=your_access_token_here
ACCESS_SECRET=your_access_secret_here

# Scheduling Configuration (OPTIONAL)
# Number of posts per day (default: 3)
POSTS_PER_DAY=3

# Hours between posts (default: 8)
HOURS_BETWEEN_POSTS=8

# Hour of day to start posting (0-23, default: 9 for 9 AM)
START_HOUR=9

# UTC timezone offset in hours (default: 0)
# Examples: -5 (EST), +1 (CET), +8 (CST)
TIMEZONE_OFFSET=0

# Error Handling Configuration (OPTIONAL)
# Maximum retry attempts for failed posts (default: 3)
MAX_RETRIES=3

# Delay between retry attempts in seconds (default: 60)
RETRY_DELAY=60
